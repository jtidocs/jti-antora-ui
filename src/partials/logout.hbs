{{#if page.attributes.show_logout}}
<div class="navbar-item hide-for-print">
  <span class="control">
    <a class="button is-primary"
       id="logout-btn"
       href="https://{{site.keys.auth0Domain}}/oidc/logout?client_id={{site.keys.auth0Client}}">Log out</a>
  </span>
</div>
<script>
  document.getElementById('logout-btn').addEventListener('click', function(e) {
    e.preventDefault()
    for (let cookieName of ['access_token', 'id_token', 'refresh_token', 'auth0']) {
      document.cookie = `${cookieName}=; max-age=0; path=/; secure; samesite=strict`
    }
    let link = document.getElementById('logout-btn')
    let url = new URL(link.href)
    url.searchParams.append('post_logout_redirect_uri', '{{site.keys.zendeskHcUrl}}')
    window.location.href = url.toString()
  })
</script>
{{/if}}
